<div>
	<h5 class="comment">Comment by <%= comment.author_name %></h5>
	<h6 class="comment">Posted <%= comment.created_at.strftime("%-m/%-d/%Y") %> at 
		<%= comment.created_at.strftime("%I:%M %p") %>
	</h6>
	<!--<h6>Posted <%= distance_of_time_in_words(comment.article.created_at, comment.created_at) %></h6>-->
	<p class="comment"><%= comment.body %></p>
	<div>
	<ul>
		<% if logged_in? %>
			<%= link_to 'Delete Comment', article_comment_path(comment.article, comment), method: :delete, 
				confirm: "Delete the Comment?", :class => "admin" %>
		<% end %>
	</ul>
</div>

</div>
