<h1>All Articles</h1>

<ul id="articles">
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title,  article_path(article) %>
      <br>
      <%= truncate(article.body, length: 230, separator: ' ') %> <%= link_to "Read More", article_path(article) %>
    </li>
  <% end %>
</ul>
<% if logged_in? %>
	<%= link_to "New Article", new_article_path, :class=> "admin" %>
<% end %>