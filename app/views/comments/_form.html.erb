<hr>
<h4>Leave A Comment</h4>

<%= simple_form_for [ @article, @comment ], html: { class: "form-horizontal" } do |f| %>
  
  <div class="control-group">
    <%= f.input :author_name, label: "Name" %><br/>
    <%= f.input :body, label: "Comment", input_html: { class: 'span12', :rows => 3 } %>
  </div>  
  <div class="form-actions">
     <button type="submit" class="btn">Submit</button>
    <!--<%= f.button :submit %>-->
  </div>
<% end %>